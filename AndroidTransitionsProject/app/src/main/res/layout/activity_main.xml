<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btScene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:text="Scene"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btTransition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Transition"
        app:layout_constraintEnd_toEndOf="@+id/btScene"
        app:layout_constraintStart_toStartOf="@+id/btScene"
        app:layout_constraintTop_toBottomOf="@+id/btScene" />

    <Button
        android:id="@+id/btTransitionManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TransitionManager"
        app:layout_constraintEnd_toEndOf="@+id/btTransition"
        app:layout_constraintStart_toStartOf="@+id/btTransition"
        app:layout_constraintTop_toBottomOf="@+id/btTransition" />

    <Button
        android:id="@+id/btScreenTransitions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Screens Transitions"
        app:layout_constraintEnd_toEndOf="@+id/btTransitionManager"
        app:layout_constraintStart_toStartOf="@+id/btTransitionManager"
        app:layout_constraintTop_toBottomOf="@+id/btTransitionManager" />

</android.support.constraint.ConstraintLayout>