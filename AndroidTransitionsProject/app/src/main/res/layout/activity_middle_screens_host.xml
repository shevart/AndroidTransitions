<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMiddleScreenRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:transitionName="@string/shared_element_triangle"
    tools:context=".specialcases.screentriangle.middlescreen.MiddleScreensHostActivity">

    <Button
        android:id="@+id/btMiddleBackToFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Back to First Fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btMiddleBackToSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Back to Second Fragment"
        app:layout_constraintEnd_toEndOf="@+id/btMiddleBackToFirst"
        app:layout_constraintStart_toStartOf="@+id/btMiddleBackToFirst"
        app:layout_constraintTop_toBottomOf="@+id/btMiddleBackToFirst" />
</android.support.constraint.ConstraintLayout>